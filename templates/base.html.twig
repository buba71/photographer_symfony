                        <div class="mask pattern-2"><h1>{{ sliderImage.name }}</h1></div>
                    </div>
                {% endfor %}
            </div>
            <!-- SlideShow -->
        {% endblock %}
        </header>

        <main>
            <div class="container-fluid">
            {% block content %}
            {% endblock %}
            </div>
        </main>

