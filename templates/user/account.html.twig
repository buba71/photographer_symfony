{% extends 'layout.html.twig' %}

{% block content %}

    <div class="card elegant-color-dark" id="page-content">
        <div class="card-body">
            <h4 class="card-title">Vos informations personnelles</h4>

        <div class="row">
            <div class="col-lg-12" id="user-info">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Adresse mail</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="align-middle">{{ app.user.username }}</td>
                            <td class="align-middle">{{ app.user.email }}</td>
                            <td><a href="{{ path('fos_user_profile_edit') }}">
                                    <button type="button" class="btn btn-dark btn-sm align-left">Modifier</button>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>


            </div>
        </div>
        <div class="row">
            <div class="col-lg-12" id="bookmarks-info">
            <table class="table">
                <thead>
                <tr>
                    <th>Photos que vous avez aim√©</th>
                    <th>Date</th>
                </tr>
                </thead>
            {% for message in app.flashes('notice') %}
            <div class="flash-notice grey-text">
                {{ message }}
            </div>
            {% endfor %}

                {% for item in itemList %}
                <tr>
                    <td>
                        <img src="{{ vich_uploader_asset(item.image, 'imageFile')|thumb }}" style="max-width: 50px">
                    </td>
                    <td>
                        {{ item.likeDate|date('d/m/Y') }}
                    </td>
                </tr>

                {% endfor %}

            </table>


            </div>
        </div>
        </div>
    </div>


{% endblock content %}